.container {
    position:absolute;
    background: #fff;
    box-sizing: border-box;
    height: 100%;
    width: 100%;
}
.en{
    margin-left: 25rpx;
    margin-top:25rpx;
}
.cn,.bt,.progress,.answer{
    margin-left: 25rpx;
}
.en{
    width:100%;
    height: 20%;
    
}
.en_left{
    float:left;
    width:60%;
}
.en1{
    font-weight:900;
    font-size:55rpx;

}
.en2{
    font-size:40rpx;
}

.en_right{
    float:left;
    width:40%;
}
.cn{
    height: 30%;
    margin-top: 25rpx;
}

.sentence{
    height:30%;
}
.bt{
    height: 10%;
    margin-right: 25rpx;
    margin-top:40rpx;
}
.progress{
    height: 10%;
}
.text_words{
    font-weight: 900;
    font-size: 50rpx;
    display: block;
}
.text_exp{
    font-weight: 100;
    font-size: 50rpx;
    display: block;
}
.w_add{
    float:right;
    margin-left: 5rpx;
    margin-right: 5rpx;
}
.w_del{
    float:right;
     margin-left: 5rpx;
    margin-right: 5rpx;
}
.text_cn{
    font-size:40rpx;
}

.sen_en{
    font-weight: 100;
    font-size: 40rpx;
    display: block;
    
}
.sen_cn{
    font-weight: 100;
    font-size: 40rpx;
    display: block;
    margin-top:10rpx;
}

.answer_input{
    height:50rpx;
    border-bottom:1rpx solid #C0C0C0;
    border-left:0;
    border-right: 0;
    border-top: 0;
}

                                
.icon_img{
    width:55rpx;
    height:55rpx;
    float:left;
    margin: 20rpx;
}

.bt_voice{
    width:250rpx;
    float:left;
    background-color:#00BFFF;
    margin-right:45rpx;

}
.bt_next{
    width:350rpx;
    float:left;
    background-color:#00FF00;

}
.bottom_sli{
    bottom:0rpx;
}